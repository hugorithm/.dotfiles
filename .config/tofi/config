# Default config for tofi
#
# Copy this file to ~/.config/tofi/config and get customising!
#
# A complete reference of available options can be found in `man 5 tofi`.

#
### Fonts
#
	font = "/usr/share/fonts/TTF/FiraCodeNerdFontMono-Regular.ttf"
	font-size = 12
	font-features = ""
	font-variations = ""
	hint-font = true

#
### Text theming
#
	# Default text color
	text-color = #DCD7BA

	# Prompt text theme
	prompt-background = #00000000
	prompt-background-padding = 0
	prompt-background-corner-radius = 0

	# Placeholder text theme
	placeholder-color = #727169
	placeholder-background = #00000000
	placeholder-background-padding = 0
	placeholder-background-corner-radius = 0

	# Input text theme
	input-background = #00000000
	input-background-padding = 0
	input-background-corner-radius = 0

	# Default result text theme
	default-result-background = #00000000
	default-result-background-padding = 0
	default-result-background-corner-radius = 0

	# Selection text
	selection-color = #7E9CD8
	selection-background = #00000000
	selection-background-padding = 0
	selection-background-corner-radius = 0

	# Matching portion of selection text
	# selection-match-color = #7E9CD8 
	selection-match-color = #7FB4CA




#
### Text cursor theme
#
	text-cursor-style = block
	text-cursor-corner-radius = 0
	text-cursor-thickness = 2

#
### Text layout
#
	prompt-text = "run: "
	prompt-padding = 0
	placeholder-text = ""
	num-results = 0
	result-spacing = 0
	horizontal = false
	min-input-width = 0

#
### Window theming
#
	width = 300
	height = 300

	# Window background color
	background-color = #1F1F28

	outline-width = 0
	outline-color = #16161D

	border-width = 3
	border-color = #54546D


	corner-radius = 5

	padding-top = 8
	padding-bottom = 8
	padding-left = 8
	padding-right = 8

	clip-to-padding = true
	scale = true

#
### Window positioning
#
	output = ""
	anchor = center
	exclusive-zone = -1
	margin-top = 0
	margin-bottom = 0
	margin-left = 0
	margin-right = 0

#
### Behaviour
#
	hide-cursor = false
	text-cursor = true
	history = true
	matching-algorithm = fuzzy
	require-match = true
	auto-accept-single = false
	hide-input = false
	hidden-character = "*"
	physical-keybindings = true
	print-index = false
	drun-launch = false
